@page "{id}"
@model Nigel.Web.Pages.Admin.Sys.Admin.Role.UpdateModel

@{
    Layout = "~/Pages/Admin/Shared/_LayoutAdminiFrame.cshtml";
}
@section Scripts{
    <script type="text/javascript">
    var id = @Model.Role.Id;
    </script>
    <script src="~/js/admin/sys/admin/role/update.js"></script>
}

<form id="data-form" class="form-horizontal m-t text-sm" data-parsley-validate="true">
    <section class="panel panel-default">
        <header class="panel-heading">
            <strong>修改角色</strong>
        </header>
        <div class="panel-body">
            <div class="form-group m-b-none">
                <div class="col-sm-1">
                </div>
                <div class="col-sm-3">
                    @Html.TextBoxFor(c => c.Role.Name, null, new { @class = "form-control input-sm", @data_parsley_maxlength = "30", @data_parsley_trigger = "change", @data_parsley_required = "true", @placeholder = "请输入角色名称" })
                    <div class="error"></div>
                </div>
                <div class="col-sm-2">
                    @foreach (var item in XUCore.Helpers.Enum.GetDictionary<Nigel.Domain.Core.Enums.Status>(0))
                    {
                        <div class="radio i-checks inline">
                            <label>
                                @Html.RadioButtonFor(c => c.Role.Status, (Nigel.Domain.Core.Enums.Status)item.Key);
                                <i></i>
                                @item.Value
                            </label>
                        </div>
                    }
                </div>
            </div>
            <div class="line line-dashed b-b line-sm pull-in"></div>
            @foreach (var item in Model.Menus.Where(c => c.IsMenu == true))
            {
                var childList = Model.Menus.Where(c => c.FatherId == item.Id && c.IsMenu == false).ToList();
                <div class="form-group m-b-none">
                    <div class="col-sm-1">
                    </div>
                    <div class="col-sm-11">
                        <div class="checkbox i-checks col-sm-2">
                            <label>
                                <input type="checkbox" name="MenuKeys" value="@item.Id" @(Model.MenuKeys.Contains(item.Id) ? "checked=\"checked\"" : "") />
                                <i></i>
                                @Html.Raw(item.Name)
                            </label>
                        </div>
                        <div class="col-sm-9">
                            @foreach (var child in childList)
                            {
                                <div class="checkbox i-checks col-sm-2">
                                    <label>
                                        <input type="checkbox" name="MenuKeys" value="@child.Id" @(Model.MenuKeys.Contains(child.Id) ? "checked=\"checked\"" : "") />
                                        <i></i>
                                        @Html.Raw(child.Name)
                                    </label>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="line line-dashed b-b line-sm pull-in"></div>
            }
            <div class="form-group m-b-none">
                <label class="col-sm-2 control-label"></label>
                <div class="col-sm-3">
                    <a href="#" onclick="window.parent.closeTab('admin-role-update-@Model.Role.Id')" class="btn btn-default">关闭页面</a>
                    <button type="submit" class="btn btn-primary m-l">保存数据</button>
                </div>
            </div>
        </div>
    </section>
</form>

