@page "{id}"
@model Nigel.Web.Pages.Admin.Sys.Base.Category.UpdateModel

@{
    Layout = "~/Pages/Admin/Shared/_LayoutAdminiFrame.cshtml";
}
@section Scripts{
    <script type="text/javascript">
    var id = @Model.Category.Id;
    </script>
    <script src="~/js/admin/sys/base/category/update.js"></script>
}

<form id="data-form" class="form-horizontal m-t text-sm" data-parsley-validate="true">
    <section class="panel panel-default">
        <header class="panel-heading">
            <strong>修改类别</strong>
        </header>
        <div class="panel-body">
            <div class="form-group m-b-none">
                @Html.LabelFor(c => c.Category.Name, "类别名称", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-3">
                    @Html.TextBoxFor(c => c.Category.Name, null, new { @class = "form-control input-sm", @data_parsley_maxlength = "30", @data_parsley_trigger = "change", @data_parsley_required = "true", @placeholder = "请输入类别名称" })
                    <div class="error"></div>
                </div>
            </div>
            <div class="line line-dashed b-b line-sm pull-in"></div>
            <div class="form-group m-b-none">
                @Html.LabelFor(c => c.Category.ParentGuid, "上级类别", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-3">
                    @Html.DropDownListFor(c => c.Category.ParentGuid, Model.DropDownTreeList, "", new { @class = "chosen-select", @style = "width:100%;" })
                    <div class="error"></div>
                </div>
            </div>
            <div class="line line-dashed b-b line-sm pull-in"></div>
            <div class="form-group m-b-none">
                @Html.LabelFor(c => c.Category.Code, "分组编码", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-3">
                    @Html.TextBoxFor(c => c.Category.Code, null, new { @class = "form-control input-sm", @data_parsley_maxlength = "50", @data_parsley_trigger = "change", @data_parsley_required = "true", @placeholder = "请输入编码，可通过该编码分组，同组请保持一致" })
                    <div class="error"></div>
                </div>
            </div>
            <div class="line line-dashed b-b line-sm pull-in"></div>
            <div class="form-group m-b-none">
                @Html.LabelFor(c => c.Category.Css, "类别样式", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-4">
                    <div class="input-group input-group-sm">
                        @Html.TextBoxFor(c => c.Category.Css, "", new { @class = "form-control input-sm", @data_parsley_maxlength = "50" })
                        <span class="input-group-btn">
                            <a href="#" data-color="text-success" class="color btn btn-success btn-sm"> </a>
                            <a href="#" data-color="text-primary" class="color btn btn-primary btn-sm"> </a>
                            <a href="#" data-color="text-danger" class="color btn btn-danger btn-sm"> </a>
                            <a href="#" data-color="text-dark" class="color btn btn-dark btn-sm"> </a>
                            <a href="#" data-color="text-info" class="color btn btn-info btn-sm"> </a>
                            <a href="#" data-color="text-warning" class="color btn btn-warning btn-sm"> </a>
                            <a href="#" data-color="text-default" class="color btn btn-default btn-sm"> </a>
                        </span>
                    </div>
                    <div class="error"></div>
                </div>
            </div>
            <div class="line line-dashed b-b line-sm pull-in"></div>
            <div class="form-group m-b-none">
                @Html.LabelFor(c => c.Category.Remark, "类别描述", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-3">
                    @Html.TextAreaFor(c => c.Category.Remark, new { @class = "form-control input-sm", @style = "height:100px;", @data_parsley_maxlength = "200", @placeholder = "请输入类别描述" })
                    <div class="error"></div>
                </div>
            </div>
            <div class="line line-dashed b-b line-sm pull-in"></div>
            <div class="form-group m-b-none">
                @Html.LabelFor(c => c.Category.Content, "类别简介", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-3">
                    <div id="Contents">
                        @Html.TextAreaFor(c => c.Category.Content, new { @class = "form-control input-sm", @style = "height:200px;" })
                    </div>
                </div>
            </div>
            <div class="line line-dashed b-b line-sm pull-in"></div>
            <div class="form-group m-b-none">
                @Html.LabelFor(c => c.Category.Weight, "数据权重", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-3">
                    @Html.TextBoxFor(c => c.Category.Weight, null, new { @type = "number", @class = "form-control input-sm", @data_parsley_min = "0", @data_parsley_max = "1000", @placeholder = "数字越大越靠前" })
                </div>
            </div>
            <div class="line line-dashed b-b line-sm pull-in"></div>
            <div class="form-group m-b-none">
                @Html.LabelFor(c => c.Category.Status, "数据状态", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-3">
                    @foreach (var item in XUCore.Helpers.Enum.GetDictionary<Nigel.Domain.Core.Enums.Status>(0))
                    {
                        <div class="radio i-checks inline">
                            <label>
                                @Html.RadioButtonFor(c => c.Category.Status, (Nigel.Domain.Core.Enums.Status)item.Key);
                                <i></i>
                                @item.Value
                            </label>
                        </div>
                    }
                </div>
            </div>
            <div class="line line-dashed b-b line-sm pull-in"></div>
            <div class="form-group m-b-none">
                <label class="col-sm-2 control-label"></label>
                <div class="col-sm-3">
                    <a href="#" onclick="window.parent.closeTab('base-category-update-@Model.Category.Id')" class="btn btn-default">关闭页面</a>
                    <button type="submit" class="btn btn-primary m-l">保存数据</button>
                </div>
            </div>
        </div>
    </section>
</form>

